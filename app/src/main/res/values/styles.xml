<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorDivider">@color/colorPrimaryDivider</item>
        <item name="colorIcons">@color/colorPrimaryIcon</item>
        <item name="disabledAlpha">0.5</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:colorBackground">@color/colorPrimaryBackground</item>
        <item name="android:windowBackground">@color/colorPrimaryBackground</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorPrimaryDisableOnly">@color/colorPrimaryDisabled</item>
        <item name="android:textColorPrimaryNoDisable">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorPrimaryTextSecondary</item>
        <item name="android:textColorSecondaryNoDisable">@color/colorPrimaryTextSecondary</item>
        <item name="android:textAppearanceMedium">@style/CustomtextAppearanceMedium</item>
        <item name="android:textAppearanceSmall">@style/CustomtextAppearanceSmall</item>
        <item name="android:listDivider">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTitleStyle">@style/ToolBarTitle</item>
        <item name="android:backgroundDimAmount">0.9</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorLightPrimary</item>
        <item name="colorPrimaryDark">@color/colorLightPrimaryDark</item>
        <item name="colorAccent">@color/colorLightAccent</item>
        <item name="colorDivider">@color/colorLightPrimaryDivider</item>
        <item name="colorIcons">@color/colorLightPrimaryIcon</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:windowBackground">@color/colorLightPrimaryBackground</item>
        <item name="disabledAlpha">0.38</item>
        <item name="android:listDivider">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/colorLightPrimaryText</item>
        <item name="android:textColorPrimaryDisableOnly">@color/colorLightPrimaryDisabled</item>
        <item name="android:textColorPrimaryNoDisable">@color/colorLightPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorLightPrimaryTextSecondary</item>
        <item name="android:textColorSecondaryNoDisable">@color/colorLightPrimaryTextSecondary</item>
        <item name="android:textAppearanceMedium">@style/CustomtextAppearanceMedium</item>
        <item name="android:textAppearanceSmall">@style/CustomtextAppearanceSmall</item>
        <item name="android:windowTitleStyle">@style/ToolBarTitle</item>
        <item name="android:backgroundDimAmount">0.9</item>
    </style>

    <style name="AppTheme.Login" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryText</item>
        <item name="android:windowBackground">@color/colorBackgroundLogin</item>
        <item name="colorDivider">@color/colorPrimaryDivider</item>
        <item name="colorIcons">@color/colorPrimaryText</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorPrimaryDisableOnly">@color/colorPrimaryDisabled</item>
        <item name="android:textColorPrimaryNoDisable">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorPrimaryTextSecondary</item>
        <item name="android:textColorSecondaryNoDisable">@color/colorPrimaryTextSecondary</item>
        <item name="android:textAppearanceMedium">@style/CustomtextAppearanceMedium</item>
        <item name="android:textAppearanceSmall">@style/CustomtextAppearanceSmall</item>
        <item name="android:listDivider">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTitleStyle">@style/ToolBarTitle</item>
        <item name="android:backgroundDimAmount">0.9</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolBarTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">?attr/colorIcons</item>
    </style>

    <style name="SettingsTextAppearanceMedium" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomtextAppearanceMedium" parent="TextAppearance.AppCompat.Medium">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomtextAppearanceSmall" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearanceSettingsCategory" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
