<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_detailed_report"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    tools:ignore="missingPrefix"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/detailed_TV_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="JOHN DOE"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

        <TextView
            android:id ="@+id/detailed_TV_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="16 MEI 2017"

            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />

        <View
            android:id="@+id/detailed_D_headerc"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?attr/colorDivider"
            app:layout_constraintTop_toBottomOf="@id/detailed_TV_date"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id ="@+id/detailed_TV_comments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum blabla"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/detailed_D_headerc"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <View
            android:id="@+id/detailed_D_headerc2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?attr/colorDivider"
            app:layout_constraintTop_toBottomOf="@id/detailed_TV_comments"
            android:layout_marginTop="16dp"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />


        <Button
            android:id="@+id/detailed_BTN_commentUpvotes"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:background="@color/transparent"
            android:padding="0dp"
            android:text="+1"
            android:textColor="?attr/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailed_D_headerc2" />


    </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>