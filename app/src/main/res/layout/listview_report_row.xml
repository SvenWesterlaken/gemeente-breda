<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/reportImage"
        android:layout_width="36dp"
        android:layout_height="34dp"
        app:layout_constraintBottom_toBottomOf="@+id/DescriptionTxt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/cast_intro_overlay_button_background_color"
        android:layout_alignBottom="@+id/seenNotifier"
        android:layout_alignLeft="@+id/DescriptionTxt"
        android:layout_alignStart="@+id/DescriptionTxt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.037"
        app:layout_constraintRight_toLeftOf="@+id/AddressTxt"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/ReportText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kapotte straatverlichting"
        android:layout_above="@+id/DescriptionTxt"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/CustomtextAppearance"

        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toRightOf="@+id/reportImage"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/AddressTxt"
        android:layout_width="118dp"
        android:layout_height="16dp"
        android:text="Lovendijkstraat 63"
        android:textAppearance="@style/CustomtextAppearance"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/ReportText"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/ReportText" />

    <TextView
        android:id="@+id/DescriptionTxt"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. "
        android:layout_below="@+id/reportImage"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/reportNumberTxt"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAppearance="@style/CustomtextAppearance"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.061" />

    <ImageView
        android:id="@+id/seenNotifier"

        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@color/clear_btn_color"
        android:layout_alignParentTop="true"

        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/reportNumberTxt"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@color/clear_btn_color"

        app:layout_constraintRight_toLeftOf="@+id/seenNotifier"
        android:layout_marginRight="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />



</android.support.constraint.ConstraintLayout>